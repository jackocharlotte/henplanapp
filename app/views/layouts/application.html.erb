<!DOCTYPE html>
<html>
<head>
 <title><%= full_title(yield(:title)) %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= stylesheet_link_tag  "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<script type="text/javascript" src="//use.typekit.net/bqh8lwi.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= csrf_meta_tags %>
</head>
<body class="<%= body_class %>">

	<% if user_signed_in? %>
		<%= render 'layouts/loggedin' %>
	<% else %>
		<%= render 'layouts/not_loggedin' %>
	<% end %>

<!--<div class="flash-container"></div>-->


	<div class="container">
		<div class="row">
			<div class="col-xs-7 col-sm-7 col-md-12">
			  <% flash.each do |type, message| %>
				<div class="alert flash <%= type %> alert-success alert-dismissable">
					<%= message %>
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				</div>
				<% end %>	
			</div>
		</div>
	</div>


<%= yield %>


</body>
</html>