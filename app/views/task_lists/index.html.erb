<% provide(:title, 'Task Lists') %>

<div class="lw-header">
  <div class="container">
      <div class="row">
          <div class="col-md-12">
              <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12">
                     <h1><span class="icon-font">&#10003;</span>Task Lists</h1>
                       
                  </div> 
              </div>
          </div>
      </div>
  </div>
</div>

<div class="container">
    <div class="row">
        <article role="main">  

           <div class="col-md-12 ">
              <div class="dropdown">
                  <a class="filter" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html">
                    All Task Lists <span class="caret"></span>        
                  </a>
                  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                    <li><a href="">My Task Lists</a></li>
                  </ul>
              </div>
              <%= link_to new_task_list_path, class: 'icon-font sub-menu' do %> &#8862; <span>New Task List</span><% end %>
          </div>
            
          <div class="col-xs-12 col-sm-12 col-md-8 tasklists-layout">

              <% if @task_lists.present? %>
                <% @task_lists.each do |task_list| %>
                
                    <div class="tasks col-xs-12 col-sm-6" id="<%= dom_id(task_list) %>">
                        <div class="panel padded border">
                           <h2><%= task_list.title %></h2>
                           
                           <p class="created">Assigned to: <%= User.find(task_list.user_id).username %> <br/> Created: <%= task_list.created_at.strftime("%d %b. %Y") %></p>
                               <%if task_list.description.present? %>
                                 <p><%= task_list.description %></p>
                               <%end%>

                           <ul>  
                              <li>
                                <%= link_to task_list_task_items_path(task_list), class: 'icon-font' do %>
                                &#57349;
                                <span>View tasks</span>
                                <% end %>
                              </li>
                              
                              <li>
                                <%= link_to edit_task_list_path(task_list), class: 'icon-font' do %>
                                &#9998;
                                <span>Edit</span>
                                <% end %>
                              </li>
                              <li>
                                <%= link_to task_list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'icon-font' do %>
                                &#59177;
                                <span>Delete</span>
                                <% end %>
                              </li>
                      
                            </ul>
                        </div>
                    </div>
                  <% end %>
                <% else %>
                 <div class="no-items">
                    You have no task lists. Create a <%= link_to 'new one.',new_task_list_path %>
                  </div>
                </div>
              <% end %>

          </div><!--6-->


          <!-- Static content for prototype to demonstrate the display of entire notes-->
        <div class="tasks col-xs-12 col-sm-12 col-md-4">
            <div class="panel panel-default activity">
                <div class="panel-heading">
                  <p class="panel-title head"><span class="icon-font">&#10078;</span>Activity </p>
                </div>
                <div class="panel-body">
                    <ul class="media-list">
                        <li class="media">
                            <a class="pull-left" href="#">
                              <%=  image_tag("members/m3.jpg", :alt => "member", size: "60") %>
                            </a>
                            <div class="media-body">
                              <p><a href="">Lottejackson</a> added 5 tasks to the <a href="">Music</a> task list. <br/><span class="date-small">2 hours ago. </span> </p>
                            </div>
                        </li>

                         <li class="media">
                            <a class="pull-left" href="#">
                              <%=  image_tag("members/m1.jpg", :alt => "member", size: "60") %>
                            </a>
                            <div class="media-body">
                              <p><a href="">Kirsten</a> added 2 items to the <a href="">Budget</a> list.<br/> <span class="date-small">2 hours ago. </span> </p>
                            </div>
                         </li>

                         <li class="media">
                            <a class="pull-left" href="#">
                              <%=  image_tag("members/m1.jpg", :alt => "member", size: "60") %>
                            </a>
                            <div class="media-body">
                              <p><a href="">Kirsten</a> completed 2 items on the <a href="">Initial jobs</a> task list.<br/> <span class="date-small">2 hours ago. </span> </p>
                            </div>
                        </li>
                    </ul>
                 </div><!--panel body-->
              </div><!--panel-->
         </div><!--col-->
              
        </article>
    </div>
</div>



