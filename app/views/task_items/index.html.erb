<div class="container">
    <div class="row">
        <article role="main">

        	<div class="col-md-12">
	            <div class="row">
	              <div class="col-xs-12 col-sm-6 col-md-6">
	              	 <h1><span class="icon-font">&#10003;</span><%= @task_list.title %></h1>
	              </div> 
	              <div class="col-xs-12 col-sm-6 col-md-6 new">
	              	   <%= link_to "New Task Item", new_task_list_task_item_path %>
	              </div> 
	            </div>
         	</div>


        <table class="table task_items">
          <thead>
            <tr>
              <th width="25%">Completed?</th>
              <th width="65%">Content</th>
              <th width="10%">Functions</th>
            </tr>
          </thead>
          <tbody>
          <% @task_list.task_items.each do |task_item| %>
          <tr id="<%= dom_id(task_item) %>">
            <td>
              <% if task_item.completed? %>
                <%= task_item.completed_at %>
              <% else %>
                <%= link_to "Mark Complete", complete_task_list_task_item_path(task_item), method: :patch %>
              <% end %>
            </td>
            <td><%= task_item.content %></td>
            <td>
              <%= link_to "Edit", edit_task_list_task_item_path(task_item) %>
              <%= link_to "Delete", task_list_task_item_path(task_item), method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>

    </div>
  </article>
</div>

