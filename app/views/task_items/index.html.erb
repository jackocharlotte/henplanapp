<div class="container cf">
  <article role="main">
    <div class="span16">
      <div class="inner cf">
        <h1><%= @task_list.title %></h1>

        <table class="task_items">
          <table class="task_items">
          <thead>
            <tr>
              <th width="25%">Completed?</th>
              <th width="65%">Content</th>
              <th width="10%">Functions</th>
            </tr>
          </thead>
          <tbody>
          <% @task_list.task_items.each do |task_item| %>
          <tr id="<%= dom_id(task_item) %>">
            <td>
             
            </td>
            <td><%= task_item.content %></td>
            <td>
              <%= link_to "Edit", edit_task_list_task_item_path(task_item) %>
              <%= link_to "Delete", task_list_task_item_path(task_item), method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>

        <p>
          <%= link_to "New Task Item", new_task_list_task_item_path %>
        </p>
      </div>
    </div>
  </article>
</div>

